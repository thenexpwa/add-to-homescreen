/** @var \NexPWA\AddToHomescreen\Block\PwaLinks $block */
$version = time();
$manifestUrl = $block->getBaseUrl() . 'version' . $version . '/manifest.webmanifest';
$serviceWorkerUrl = $block->getBaseUrl() . 'service-worker.js';
?>
<?php if ($block->isManifestEnabled()): ?>
    <link rel="manifest" href="<?php echo $manifestUrl ?>">
<?php endif; ?>

<?php if ($block->isServiceWorkerEnabled()): ?>
    <script type="text/javascript">
        (function (w) {
            if ('serviceWorker' in w.navigator) {
                w.navigator.serviceWorker.register('<?php echo $serviceWorkerUrl ?>');
            }
        })(window);
    </script>
<?php endif; ?>
